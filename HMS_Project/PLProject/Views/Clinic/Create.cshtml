@model ClinicViewModel
@{
    ViewData["Title"] = "Create Clinic";
}
<h1>Create New Clinic</h1>
<br />
<br />

<form asp-asp-controller="Clinic" asp-action="Create" method="post">

    <partial name="PartialViews/CreateEditClinicPartial" />

    <input type="submit" value="Create" class="btn btn-primary mt-2" />
    <a asp-controller="Clinic" asp-action="Index" class="btn btn-secondary mt-2">Back To List</a>
</form>

<!-- Scripts for Validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}