@model IEnumerable<ClinicViewModel>
@{
	ViewData["Title"] = "View Clinics";
}
<div class="container mt-5" style="min-height: 100vh">
	<!-- Success Message -->
	<partial name="SuccessMessage" />

	<h1 class="page-title">All Clinics</h1>

	<a asp-controller="Clinic" asp-action="Create" class="btn btn-primary">Create New Clinic</a>
	<a asp-controller="Clinic" asp-action="AddSpecialization" class="btn btn-primary">Add New Clinic Specialization</a>

	<br />
	@if (Model.Count() > 0)
	{
		<table class="mt-4 table table-striped table-hover">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(C => C.Name)</th>
					<th>@Html.DisplayNameFor(C => C.Phone)</th>
					<th>@Html.DisplayNameFor(C => C.Specialization)</th>
					<th>@Html.DisplayNameFor(C => C.Price)</th>
					<th>Details</th>
					<th>Update</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var clinic in Model)
				{
					<tr>
						<td class="align-content-center">@Html.DisplayFor(C => clinic.Name)</td>
						<td class="align-content-center">@Html.DisplayFor(C => clinic.Phone)</td>
						<td class="align-content-center">@Html.DisplayFor(C => clinic.Specialization)</td>
						<td class="align-content-center">@Html.DisplayFor(C => clinic.Price)</td>

						<td>
							<a asp-action="Details" asp-route-Id="@clinic.Id" class="btn btn-warning">
								<i class="fas fa-eye pe-1"></i>Details
							</a>
						</td>
						<td>
							<a asp-action="Edit" asp-route-Id="@clinic.Id" class="btn btn-success">
								<i class="fas fa-edit pe-1"></i>Update
							</a>
						</td>
						<td>
							<a asp-action="Delete" asp-route-Id="@clinic.Id" class="btn btn-danger">
								<i class="fas fa-trash pe-1"></i>Delete
							</a>
						</td>

					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<div class="mt-4 alert alert-warning text-center">
			<h3><i class="fas fa-exclamation-triangle"></i> No Clinics Found</h3>
			<p>You can add new clinic by clicking the button below.</p>
			<a asp-controller="Clinic" asp-action="Create" class="btn btn-primary">
				<i class="fas fa-plus-circle"></i> Add New Clinic
			</a>
		</div>
	}
</div>
@section Scripts {
	<script>
		// Automatically hide the success message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#SuccessMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>}
