@model IEnumerable<NurseViewModel>
@{
    ViewData["Title"] = "Nurses";
}

<h1> All Nurses </h1>
<br />
<br />

<a asp-action="Create" asp-controller="Nurse" class="btn btn-primary"> Create New Nurse </a>
<br />

@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(N => N.FirstName)</th>
                <th>@Html.DisplayNameFor(N => N.LastName)</th>
                <th>@Html.DisplayNameFor(N => N.Email)</th>
                <th>@Html.DisplayNameFor(N => N.Phone)</th>
                <th>@Html.DisplayNameFor(N => N.Gender)</th>
                <th>@Html.DisplayNameFor(N => N.DateOfBirth)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var nurse in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(N=> nurse.FirstName)</td>
                    <td>@Html.DisplayFor(N => nurse.LastName)</td>
                    <td>@Html.DisplayFor(N => nurse.Email)</td>
                    <td>@Html.DisplayFor(N => nurse.Phone)</td>
                    <td>@Html.DisplayFor(N => nurse.Gender)</td>
                    <td>@Html.DisplayFor(N => nurse.DateOfBirth)</td>

                    <partial name="_ButtonsPartial" model="@nurse.Id"></partial> 
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>
            There is no Nurses !
        </h3>
    </div>
}


