@model NurseViewModel
@{
	ViewData["Title"] = "Delete Nurse";
}
<div class="container mt-5">
	<!-- Error Message -->
	<partial name="ErrorMessage" />

	<h1>Are you sure you want to delete this Nurse?</h1>
	<br />

	<form asp-controller="Nurse" asp-action="Delete" method="post">

		<partial name="userpartialviews\_UserDetailsDeletePartial" model="@Model" />

		<!-- Delete and Cancel Buttons -->
		<partial name="_ButtonsInDeletePartial" />
	</form>
</div>

@section Scripts {
	<script>
		// Automatically hide the error message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#errorMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>
}