@model ActiveSubstanceViewModel

@{
    ViewData["Title"] = "Create New Active Substance";
}

<h2>Create New Active Substance</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ActiveSubstancesName"></label>
        <input asp-for="ActiveSubstancesName" class="form-control" />
        <span asp-validation-for="ActiveSubstancesName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Select Existing Active Substances (optional):</label>
        <select asp-for="ActivSubstanceId" class="form-control select2-multiple" multiple="multiple">
            @foreach (var substance in Model.ActiveSubstancesDateReader)
            {
                <option value="@substance.ActiveSubstancesId">@substance.ActiveSubstancesName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Select Medications (optional):</label>
        <select asp-for="MedicationId" class="form-control select2-multiple" multiple="multiple">
            @foreach (var medication in Model.MedicationsDateReader)
            {
                <option value="@medication.MedicationId">@medication.MedName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/select2/js/select2.min.js"></script>
    <link href="~/select2/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            // Initialize Select2 for both dropdowns
            $('.select2-multiple').select2({
                placeholder: "Select from the list",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
