@model ReceptionistViewModel

@{
	ViewData["Title"] = "Create Receptionist";
}
<div class="container mt-5">

	<!-- Error Message -->
	<partial name="ErrorMessage" />

	<h2>Create Receptionist</h2>

	<form asp-action="Create" method="post">

		<partial name="userpartialviews\_UserCreatePartial" />
		<!-- Submit Button -->
		<button type="submit" class="btn btn-primary mt-2">Submit</button>
	</form>
</div>
<!-- Scripts for Validation -->
@section Scripts {
	<script>
		// Automatically hide the error message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#errorMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

