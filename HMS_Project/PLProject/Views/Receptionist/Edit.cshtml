@model ReceptionistViewModel
@{
	ViewData["Title"] = "Edit Receptionist";
}
<div class="container mt-5">

	<!-- Error Message -->
	<partial name="ErrorMessage" />

	<h1>Edit Receptionist</h1>

	<form asp-controller="Receptionist" asp-action="Edit" method="post">

		<partial name="userpartialviews\_UserEditPartial" model="@Model" />

		<!-- Action Buttons -->
		<partial name="_ButtonsInEditPartial" />
	</form>
</div>

@section Scripts {
	<script>
		// Automatically hide the error message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#errorMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>
}