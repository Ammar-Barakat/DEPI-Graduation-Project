@model IEnumerable<Receptionist>
@{
    ViewData["Title"] = "Receptionist";
}

<h1> All Receptionists </h1>
<br />
<br />

<a asp-action="Create" asp-controller="Nurse" class="btn btn-primary"> Create New Receptionist </a>
<br />

@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(N => N.FullName)</th>
                <th>@Html.DisplayNameFor(N => N.Email)</th>
                <th>@Html.DisplayNameFor(N => N.Phone)</th>
                <th>@Html.DisplayNameFor(N => N.Gender)</th>
                <th>@Html.DisplayNameFor(N => N.DateOfBirth)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var receptionist in Model)
            {
                <tr>
                    <td>@receptionist.FullName</td>
                    <td>@receptionist.Email</td>
                    <td>@receptionist.Phone</td>
                    <td>@receptionist.Gender</td>
                    <td>@receptionist.DateOfBirth</td>

                    <td>
                        <a asp-controller="Nurse" asp-action="Details" asp-route-Id="@receptionist.SSN" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Nurse" asp-action="Edit" asp-route-Id="@receptionist.SSN" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Nurse" asp-action="Delete" asp-route-Id="@receptionist.SSN" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>
            There is no Receptionists !
        </h3>
    </div>
}


