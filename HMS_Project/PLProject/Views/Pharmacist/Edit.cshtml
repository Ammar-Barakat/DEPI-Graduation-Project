@model PharmacistViewModel
@{
	ViewData["Title"] = "Edit Pharmacist";
}
<div class="container mt-5" style="min-height: 150vh">
	<!-- Error Message -->
	<partial name="ErrorMessage" />
	<h1 class="page-title">Edit Pharmacist</h1>

	<form asp-controller="Pharmacist" asp-action="Edit" method="post">

		<partial name="userpartialviews\_UserEditPartial" model="@Model" />
		<!-- Action Buttons -->
		<partial name="_ButtonsInEditPartial" />
	</form>
</div>
<!-- Scripts for Validation -->
@section Scripts {
	<script>
		// Automatically hide the error message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#errorMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
