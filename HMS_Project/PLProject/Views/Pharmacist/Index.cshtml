@model IEnumerable<Pharmacist>
@{
    ViewData["Title"] = "Pharmacists";
}

<h1> All Pharmacists </h1>
<br />
<br />


<a asp-action="Create" asp-controller="Pharmacist" class="btn btn-primary"> Create New Pharmacist </a>
<br />

@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(P => P.FullName)</th>
                <th>@Html.DisplayNameFor(P => P.Email)</th>
                <th>@Html.DisplayNameFor(P => P.Phone)</th>
                <th>@Html.DisplayNameFor(P => P.Gender)</th>
                <th>@Html.DisplayNameFor(P => P.DateOfBirth)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.FullName</td>
                    <td>@patient.Email</td>
                    <td>@patient.Phone</td>
                    <td>@patient.Gender</td>
                    <td>@patient.DateOfBirth</td>

                    <td>
                        <a asp-controller="Nurse" asp-action="Details" asp-route-Id="@patient.SSN" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Nurse" asp-action="Edit" asp-route-Id="@patient.SSN" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Nurse" asp-action="Delete" asp-route-Id="@patient.SSN" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>
            There is no Pharmacists !
        </h3>
    </div>
}




