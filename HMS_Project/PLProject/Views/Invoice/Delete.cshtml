@model InvoiceViewModel
@{
	ViewData["Title"] = "Delete";
}
<div class="container mt-5">
	<!-- Error Message -->
	<partial name="ErrorMessage" />
	<h1>Are U Sure?</h1>
	<br />
	<form asp-asp-controller="Invoice" asp-action="Delete" method="post">


		<partial name="PartialViews/DetailsDeleteInvoicePartial" model="@Model"></partial>
		<!-- Delete and Cancel Buttons -->
		<partial name="_ButtonsInDeletePartial" />
	</form>
</div>

@section Scripts {
	<script>
		// Automatically hide the error message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#errorMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>

}