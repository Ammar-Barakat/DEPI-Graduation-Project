@model MedicationViewModel

@{
	ViewData["Title"] = "Delete Medication";
}
<div class="container mt-5">
	<!-- Error Message -->
	<partial name="ErrorMessage" />
	<h1 class="mb-4 text-danger">Are You Sure You Want to Delete This Medication?</h1>

	<div class="alert alert-warning">
		<i class="fas fa-exclamation-triangle"></i> This action is irreversible. Once you delete this medication, all related data will be removed permanently.
	</div>

	<form asp-action="Delete" method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>



		<partial name="PartialViews/DetailsDeleteMedicationPartial" />

		<input type="hidden" asp-for="Id" />

		<!-- Delete and Cancel Buttons -->
		<div class="mt-3">
			<button type="submit" class="btn btn-danger">Delete</button>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</div>
	</form>
</div>

@section Scripts {
	<script>
		// Automatically hide the error message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#errorMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>
}



