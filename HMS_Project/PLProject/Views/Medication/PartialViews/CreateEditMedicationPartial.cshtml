@model MedicationViewModel



<div class="form-group">
    <label asp-for="Name" class="form-label fw-bold"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Strength" class="form-label fw-bold"></label>
    <input asp-for="Strength" class="form-control" />
    <span asp-validation-for="Strength" class="text-danger"></span>
</div>

<div class="form-group">
    <label>Add Active Substances (optional):</label>
    <select asp-for="ActiveSubstanceIds" class="form-control select2-multiple" multiple="multiple">
        @foreach (var substance in Model.ActiveSubstances)
        {
            <option value="@substance.Id">@substance.ActiveSubstancesName</option>
        }
    </select>
</div>
