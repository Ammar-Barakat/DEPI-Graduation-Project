@model MedicationViewModel

<div class="form-group mb-3">
    <label asp-for="Name" class="form-label fw-bold"></label>
    <input asp-for="Name" class="form-control form-control-plaintext ps-1" readonly />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>


<div class="form-group mb-3">
    <label asp-for="Strength" class="form-label fw-bold"></label>
    <input asp-for="Strength" class="form-control form-control-plaintext ps-1" readonly />
    <span asp-validation-for="Strength" class="text-danger"></span>
</div>


<div class="mb-4">
    <h4 class="mb-3">Active Substances</h4>
    @if (Model.ActiveSubstances.Count > 0)
    {

        <tr>
            @foreach (var substance in Model.ActiveSubstances)
            {

                <td>@substance.Id</td>
            }
        </tr>
    }
    else
    {
        <div class="alert alert-info">No active substances found for this medication.</div>
    }
</div>


