@model MedicationViewModel

<div class="form-group mb-3">
    <label asp-for="Name" class="form-label fw-bold"></label>
    <input asp-for="Name" class="form-control form-control-plaintext ps-1" readonly />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>


<div class="form-group mb-3">

    <label asp-for="Strength" class="form-label fw-bold"></label>
    <input asp-for="Strength" class="form-control form-control-plaintext ps-1" readonly />
    <span asp-validation-for="Strength" class="text-danger"></span>
</div>




<div class="mb-4">

    @if (Model.ActiveSubstances.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(a => a.ActiveSubstances.First().ActiveSubstancesName)</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var activeSubstance in Model.ActiveSubstances)
                    {
                        <tr class="align-middle">
                            <td>@activeSubstance.ActiveSubstancesName</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(a => a.ActiveSubstances.First().ActiveSubstancesName)</th>

                    </tr>
                </thead>
                <tbody>
                    <tr class="align-middle">
                        <td><i class="fas fa-info-circle"></i> No medications found containing this active substance.</td>

                    </tr>
                </tbody>
            </table>
        </div>

    }
</div>


