@model IEnumerable<DoctorViewModel>
@{
    ViewData["Title"] = "doctors";
}

<h1> All doctors </h1>
<br />
<br />

<a asp-action="Create" asp-controller="doctor" class="btn btn-primary"> Create New doctor </a>
<br />

@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(N => N.FirstName)</th>
                <th>@Html.DisplayNameFor(N => N.LastName)</th>
                <th>@Html.DisplayNameFor(N => N.Email)</th>
                <th>@Html.DisplayNameFor(N => N.Phone)</th>
                <th>@Html.DisplayNameFor(N => N.Gender)</th>
                <th>@Html.DisplayNameFor(N => N.DateOfBirth)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.FirstName</td>
                    <td>@doctor.LastName</td>
                    <td>@doctor.Email</td>
                    <td>@doctor.Phone</td>
                    <td>@doctor.Gender</td>
                    <td>@doctor.DateOfBirth</td>

                    <td>
                        <a asp-controller="doctor" asp-action="Details" asp-route-Id="@doctor.SSN" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="doctor" asp-action="Edit" asp-route-Id="@doctor.SSN" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-controller="doctor" asp-action="Delete" asp-route-Id="@doctor.SSN" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>
            There is no doctors !
        </h3>
    </div>
}


