@model PatientViewModel
@{
	ViewData["Title"] = "Edit Patient";
}
<div class="container mt-5">
	<!-- Error Message -->
	<partial name="ErrorMessage" />

	<h1>Edit Patient</h1>
	<br />

	<form asp-controller="Patient" asp-action="Edit" method="post">

		<partial name="userpartialviews\_UserEditPartial" model="@Model" />
		<!-- Action Buttons -->
		<partial name="_ButtonsInEditPartial" />
	</form>
</div>
<!-- Scripts for Validation -->
@section Scripts {
	<script>
		// Automatically hide the error message after 5 seconds (5000 milliseconds)
		$(document).ready(function () {
			setTimeout(function () {
				$('#errorMessage').fadeOut('slow');
			}, 5000); // 5000 ms = 5 seconds
		});
	</script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
