@model PatientViewModel
@{
    ViewData["Title"] = "Edit Patient";
}

<h1>Edit Patient</h1>
<br />
<br />

<form asp-controller="Patient" asp-action="Edit" method="post">

    <partial name="userpartialviews\_UserEditPartial" model="@Model" />
    <!-- Action Buttons -->
    <partial name="_ButtonsInEditPartial" />
</form>

<!-- Scripts for Validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
