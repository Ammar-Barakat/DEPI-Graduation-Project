@model IEnumerable<AppUserViewModel>

@{
    ViewData["Title"] = "Users Management";
}

<h2 class="text-center">Users </h2>
<br />
<br />
<a asp-area="Admin" asp-controller="User" asp-action="Add" class="btn btn-primary">Add New User</a>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>UserName</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Role</th>
                        <th>Actions </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="align-content-center">
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td>
@*                             <td>
                                <a asp-action="Details" asp-route-Id="@Model" class="btn btn-warning">
                                    <i class="fas fa-eye pe-1"></i>Details
                                </a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-Id="@Model" class="btn btn-success">
                                    <i class="fas fa-edit pe-1"></i>Update
                                </a>
                            </td> *@

                                <a asp-area="Admin" asp-controller="User" asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-success">
                                    <i class="fas fa-edit pe-1"></i>Manage Roles
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>